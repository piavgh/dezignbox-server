<html>
<head>
    <% include ../partials/stylesheets.ejs %>
    <title><%= config.siteTitle %> | <%= __('login') %></title>
</head>
<body>
<% include ../partials/header.ejs %>

<div class="container">
    <% include ../partials/error-messages.ejs %>

    <div class="row">
        <div class="col-12 col-md-8">
            <% include ../partials/left-side.ejs %>
        </div>
        <div class="col-12 col-md-4">
            <form class="form-signin" role="form" action="/login" method="post">
                <h1><%= __('loginTitle') %></h1>
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" class="form-control" name="email" placeholder="<%= __('email') %>"
                       required
                       autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" name="password"
                       placeholder="<%= __('password') %>"
                       required>
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> <%= __('rememberMe') %>
                    </label>
                </div>
                <button class="btn btn-lg btn-block" type="submit">Log in</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>
</body>
</html>